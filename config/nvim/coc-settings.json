{
	"languageserver": {
		"nim": {
			"command": "nimlsp",
			"filetypes": ["nim", "nims"]
		}
	},
	"golang": {
		"command": "gopls",
		"rootpatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
		"filetypes": ["go"],
		"initializationoptions": {
			"useplaceholders": true
		}
	},
  "efm": {
    "command": "efm-langserver",
    "args": [],
    "filetypes": ["markdown"]
  },
	"suggest.keepcompleteopt": true
}
